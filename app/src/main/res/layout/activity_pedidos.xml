<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC6600"
    tools:context="com.elaine.kebabbangu.OrdersActivity">

    <Button
        android:id="@+id/button_cancela_pedido"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/button_cancela_pedido"
        android:onClick="callEstoque"
        android:background="#FFCC00"
        android:layout_marginTop="400dp" />

    <Button
        android:id="@+id/button_edita_pedido"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/button_edita_pedido"
        android:onClick="callPedido"
        android:background="#FFCC00"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_cancela_pedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:text="ADICIONAR LISTA DE PEDIDOS AQUI!" />

</RelativeLayout>
