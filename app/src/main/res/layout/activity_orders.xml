<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="com.elaine.kebabbangu.OrdersActivity">


    <ListView
        android:id="@+id/lista_pedidos"
        android:layout_width="match_parent"
        android:layout_height="392dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></ListView>

    <Button
        android:id="@+id/button_cancela_pedido"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/button_cancela_pedido"
        android:onClick="callEstoque"
        android:background="#FFCC00"
        android:layout_marginTop="400dp" />

    <Button
        android:id="@+id/button_edita_pedido"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/button_edita_pedido"
        android:onClick="callEditOrder"
        android:background="#FFCC00"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_cancela_pedido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
