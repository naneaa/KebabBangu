<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="com.elaine.kebabbangu.activities.RegisterActivity">

    <TextView
        android:id="@+id/totalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@color/myYellow"
        android:gravity="center"
        android:text="Em caixa: R$ 00,00"
        android:textColor="#000000"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/cashText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:background="@color/myYellow"
        android:gravity="center"
        android:text="Dinheiro: R$ 00,00"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/debitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:background="@color/myYellow"
        android:gravity="center"
        android:text="Débito: R$ 00,00"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/creditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:background="@color/myYellow"
        android:gravity="center"
        android:text="Crédito: R$ 00,00"
        android:textColor="#000000"
        android:textSize="40sp" />

    <Button
        android:id="@+id/startRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="800dp"
        android:background="#FF0000"
        android:onClick="startRegister"
        android:text="@string/button_inicia_caixa"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/closeRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/startRegisterButton"
        android:layout_marginTop="20dp"
        android:background="#FF0000"
        android:text="@string/button_encerra_caixa"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
