<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="com.elaine.kebabbangu.activities.RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#FFFFFF"
        android:text="Em caixa: R$ 100.00"
        android:textSize="32sp" />

    <Button
        android:id="@+id/button_inicia_caixa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/button_inicia_caixa"
        android:background="#FF0000"
        android:textColor="#FFFFFF"
        android:layout_marginTop="250dp" />

    <Button
        android:id="@+id/button_encerra_caixa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/button_encerra_caixa"
        android:background="#FF0000"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_inicia_caixa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
